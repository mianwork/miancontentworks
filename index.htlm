<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>MianContentWorks — AI Services & Payoneer</title>
  <meta name="description" content="AI Content, Web Design and Automation services. Pay via Payoneer. Fast delivery." />
  <style>
    :root{
      --bg:#0b1320; --card:#071026; --accent:#06c6d4; --muted:#9bb0c2;
      --glass: rgba(255,255,255,0.03);
    }
    *{box-sizing:border-box}
    body{margin:0;font-family:Inter, system-ui, Arial,sans-serif;background:linear-gradient(180deg,#071426,#02101a);color:#eaf6fb}
    .wrap{max-width:980px;margin:28px auto;padding:20px}
    header{display:flex;align-items:center;justify-content:space-between;gap:12px}
    .brand{font-weight:800;font-size:22px}
    .tag{color:var(--muted);font-size:13px}
    .hero{background:var(--card);padding:20px;border-radius:12px;box-shadow:0 10px 30px rgba(2,6,23,0.6);margin-top:18px}
    h1{margin:0 0 6px;font-size:22px}
    p.lead{margin:0;color:var(--muted)}
    .services{display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));gap:14px;margin-top:18px}
    .svc{background:var(--glass);padding:14px;border-radius:10px}
    .price{font-size:20px;font-weight:700;margin-top:8px}
    .cta{display:inline-block;background:var(--accent);color:#012428;padding:10px 12px;border-radius:9px;text-decoration:none;font-weight:700;margin-top:10px}
    form{margin-top:18px;background:rgba(255,255,255,0.02);padding:12px;border-radius:10px}
    label{display:block;font-size:13px;color:var(--muted);margin-top:8px}
    input[type="text"], input[type="email"], textarea, select{width:100%;padding:10px;border-radius:8px;border:1px solid rgba(255,255,255,0.04);background:transparent;color:inherit}
    input[type="file"]{margin-top:6px}
    .muted{color:var(--muted)}
    footer{margin-top:22px;color:var(--muted);font-size:13px;text-align:center}
    .payinfo{background:#021622;padding:12px;border-radius:8px;margin-top:12px}
    .flex{display:flex;gap:10px;align-items:center}
    .small{font-size:13px}
    .note{margin-top:10px;color:#ffd9a8;background:#2a210f;padding:8px;border-radius:8px}
    @media(max-width:560px){header{flex-direction:column;align-items:flex-start} .brand{font-size:20px}}
  </style>
</head>
<body>
  <div class="wrap">
    <header>
      <div>
        <div class="brand">MianContentWorks</div>
        <div class="tag">AI Content • Web Design • Automation — Fast delivery</div>
      </div>
      <div class="muted small">Contact: <strong>+92 334 4537784</strong> • <a href="mailto:miancontentworks@gmail.com" style="color:var(--accent);text-decoration:none">miancontentworks@gmail.com</a></div>
    </header>

    <main class="hero" role="main">
      <h1>Choose a service</h1>
      <p class="lead">I offer high-value AI-powered services. Pick a service, click the Pay button, send payment via Payoneer (details below) and then attach project files or reply with proof of payment.</p>

      <div class="services" id="services">
        <!-- Service 1 -->
        <div class="svc">
          <strong>1) AI Content Writing + SEO</strong>
          <div class="small muted">Fast delivery — content, blog posts, SEO optimization</div>
          <div class="price">$80 – $200 (starting price shown)</div>
          <div style="margin-top:8px" class="small muted">
            Starting deliverables: 800–1500 word article + on-page SEO. Revisions: 1
          </div>
          <div style="margin-top:10px">
            <a class="cta" href="#" onclick="buyNow('AI Content Writing + SEO','50')">Buy — Start at $80</a>
          </div>
        </div>

        <!-- Service 2 -->
        <div class="svc">
          <strong>2) AI Web Design (Landing Pages)</strong>
          <div class="small muted">Landing pages, conversion-focused, fast turnaround</div>
          <div class="price">$100 – $400</div>
          <div style="margin-top:8px" class="small muted">
            Includes: responsive landing page + basic SEO + deployment help
          </div>
          <div style="margin-top:10px">
            <a class="cta" href="#" onclick="buyNow('AI Web Design (Landing Pages)','80')">Buy — Start at $100</a>
          </div>
        </div>

        <!-- Service 3 -->
        <div class="svc">
          <strong>3) AI Automation Services</strong>
          <div class="small muted">Business automation, workflows, integrations</div>
          <div class="price">$100 – $1,000</div>
          <div style="margin-top:8px" class="small muted">
            Use cases: email automation, lead routing, Zapier/Make/workflows
          </div>
          <div style="margin-top:10px">
            <a class="cta" href="#" onclick="buyNow('AI Automation Services','100')">Buy — Start at $100</a>
          </div>
        </div>
      </div>

      <!-- Payoneer details -->
      <div class="payinfo" aria-live="polite">
        <strong>Payoneer payment instructions</strong>
        <p class="small muted" style="margin:6px 0">
          Send payment to the Payoneer account associated with:
        </p>
        <div class="flex">
          <div class="small">
            <div><strong>Name / Contact (WhatsApp):</strong> +92 334 4537784</div>
            <div><strong>Email:</strong> <a href="mailto:miancontentworks@gmail.com" style="color:var(--accent);text-decoration:none">miancontentworks@gmail.com</a></div>
            <div style="margin-top:6px"><strong>Note:</strong> After sending payment, please send proof (screenshot/transaction id) via WhatsApp or email and then upload your project brief below.</div>
          </div>
        </div>
      </div>

      <!-- Order / upload form -->
      <form id="orderForm" onsubmit="return prepareContactLink(event)">
        <label for="name">Full name</label>
        <input id="name" name="name" type="text" placeholder="Your full name" required />

        <label for="email">Email (so we can send deliverables)</label>
        <input id="email" name="email" type="email" placeholder="you@example.com" required />

        <label for="service">Selected service</label>
        <select id="service" name="service" required>
          <option value="AI Content Writing + SEO">$ — AI Content Writing + SEO (start $50)</option>
          <option value="AI Web Design (Landing Pages)">$ — AI Web Design (start $80)</option>
          <option value="AI Automation Services">$ — AI Automation Services (start $100)</option>
        </select>

        <label for="amount">Amount you will pay (USD) — enter agreed amount</label>
        <input id="amount" name="amount" type="text" placeholder="e.g. 50" required />

        <label for="notes">Brief / Notes (what you need)</label>
        <textarea id="notes" name="notes" rows="4" placeholder="Describe your project, links, keywords..."></textarea>

        <label for="proof">Upload proof of payment (recommended) or attach files</label>
        <input id="proof" name="proof" type="file" accept=".jpg,.png,.pdf,.doc,.docx,.zip" />

        <div style="margin-top:12px;display:flex;gap:10px;flex-wrap:wrap">
          <button class="cta" type="submit">Contact & Send Payment Proof</button>
          <a class="cta" id="whatsappQuick" href="#" target="_blank" style="background:#25D366">Quick WhatsApp</a>
          <a class="cta" id="mailtoQuick" href="#" style="background:transparent;border:2px solid rgba(255,255,255,0.06);color:var(--accent)">Email</a>
        </div>
        <div id="formNote" class="note" style="display:none"></div>
      </form>

      <div class="note" style="margin-top:16px">
        <strong>Important:</strong> Payoneer payments are processed outside this site. Put your Payoneer proof/transaction ID in the message after paying. After we receive payment proof, we start the work and email deliverables.
      </div>

    </main>

    <footer>
      © 2025 MianContentWorks • <span class="small muted">All payments via Payoneer. Phone/WhatsApp: +92 334 4537784 • Email: </span>
      <a href="mailto:miancontentworks@gmail.com" style="color:var(--accent);text-decoration:none">miancontentworks@gmail.com</a>
    </footer>
  </div>

<script>
  // Prepare WhatsApp and mailto links pre-filled from form data
  function encode(s){ return encodeURIComponent(s).replace(/%20/g,'+') }

  function buyNow(service, starter) {
    // auto-fill form values and scroll
    document.getElementById('service').value = service;
    document.getElementById('amount').value = starter;
    window.scrollTo({ top: document.body.scrollHeight, behavior: 'smooth' });
  }

  function prepareContactLink(ev){
    ev.preventDefault();
    const name = document.getElementById('name').value.trim();
    const email = document.getElementById('email').value.trim();
    const service = document.getElementById('service').value;
    const amount = document.getElementById('amount').value.trim();
    const notes = document.getElementById('notes').value.trim();
    const phone = '+923344537784'; // Payoneer contact (user-provided)
    const payEmail = 'miancontentworks@gmail.com';

    if(!name || !email || !service || !amount){
      alert('Please fill name, email, service and amount.');
      return false;
    }

    const msg = `Order%20from%20website%0AName:%20${encode(name)}%0AEmail:%20${encode(email)}%0AService:%20${encode(service)}%0AAmount:%20${encode(amount)}%20USD%0ANotes:%20${encode(notes)}%0A%0APayment%20method:%20Payoneer%0APayoneer%20contact:%20${encode(phone)}%0APayoneer%20email:%20${encode(payEmail)}%0A%0AAfter%20sending%20payment,%20please%20reply%20here%20with%20proof%20(screenshot%20or%20transaction%20ID).%0AThanks!`;

    // WhatsApp link
    const waLink = `https://wa.me/923344537784?text=${msg}`;
    const mailtoBody = `Order from website\nName: ${name}\nEmail: ${email}\nService: ${service}\nAmount: ${amount} USD\nNotes: ${notes}\n\nPayment method: Payoneer\nPayoneer contact: +923344537784\nPayoneer email: ${payEmail}\n\nAfter sending payment, please reply with proof (screenshot or transaction ID).\nThanks!`;
    const mailtoLink = `mailto:${payEmail}?subject=${encode('New order — ' + service)}&body=${encode(mailtoBody)}`;

    // Set quick-action links
    document.getElementById('whatsappQuick').href = waLink;
    document.getElementById('mailtoQuick').href = mailtoLink;

    // Show a confirmation note to user
    const note = document.getElementById('formNote');
    note.style.display = 'block';
    note.innerHTML = `<strong>Ready:</strong> Click <a href="${waLink}" target="_blank" style="color:lightblue">WhatsApp</a> or <a href="${mailtoLink}" style="color:lightblue">Email</a> to send your order and payment proof. After we receive payment proof we will begin work.`;

    // Optionally open WhatsApp automatically (uncomment line below to auto-open)
    // window.open(waLink, '_blank');

    return false;
  }
</script>
</body>
</html>
